<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='res' type='com.codenvy.ide.Resources'/>
    <ui:style>
        .btnAlign {
            float: right;
        }

        .emptyBorder {
            margin: 6px;
        }

        .spacing {
            margin-top: 10px;
        }

        .space {
            margin-right: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="600px" height="400px" addStyleNames="{style.emptyBorder}">
        <g:south size="36.0">
            <g:FlowPanel height="100%" width="100%" addStyleNames="{style.spacing}">
                <g:Button addStyleNames="{style.btnAlign}" width="50px"  height="22px" ui:field="btnClose"
                          debugId="preferencesView-btn-close">Close</g:Button>
                <g:Button addStyleNames="{style.btnAlign} {style.space}" width="50px"  height="22px"  ui:field="btnOk"
                          debugId="preferencesView-btn-ok">OK</g:Button>
                <g:Button addStyleNames="{style.btnAlign} {style.space}" width="50px"  height="22px"  ui:field="btnApply"
                          debugId="preferencesView-btn-apply">Apply</g:Button>
            </g:FlowPanel>
        </g:south>
        <g:west size="180.0">
            <g:ScrollPanel ui:field="preferences" addStyleNames="{res.coreCss.simpleListContainer}"
                           debugId="preferencesView-scrollPanel-preferences"/>
        </g:west>
        <g:center>
            <g:SimplePanel width="100%" height="100%" ui:field="contentPanel"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder> 