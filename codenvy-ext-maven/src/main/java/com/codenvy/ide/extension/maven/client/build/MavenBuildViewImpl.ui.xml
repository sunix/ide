<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='locale' type='com.codenvy.ide.extension.maven.client.MavenLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.extension.maven.client.MavenResources'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .spacing {
            margin-bottom: 10px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="350px" height="140px" addStyleNames="{style.emptyBorder}">
        <g:south size="26.0">
            <g:FlowPanel>
                <g:Button addStyleNames="{style.alignBtn}" text="{locale.buttonCancel}" width="60px" ui:field="btnCancel"
                          debugId="mavenBuildView-btn-cancel"/>
                <g:Button addStyleNames="{style.alignBtn} {style.space}" text="{locale.startBuild}" width="80px" ui:field="btnStartBuild"
                          debugId="mavenBuildView-btn-startBuild"/>
            </g:FlowPanel>
        </g:south>
        <g:center>
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                <g:north size="25.0">
                    <g:CheckBox ui:field="skipTest" HTML="{locale.skipTest}" debugId="mavenBuildView-checkBox-skipTest"/>
                </g:north>
                <g:north size="25.0">
                    <g:CheckBox ui:field="enableCommand" HTML="{locale.mavenCommand}" debugId="mavenBuildView-checkBox-enableCommand"/>
                </g:north>
                <g:center>
                    <g:TextBox ui:field="buildCommand" width="350px" height="25px" debugId="mavenBuildView-txtBox-buildCommand"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>